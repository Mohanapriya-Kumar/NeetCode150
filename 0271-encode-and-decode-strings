class Solution {
    public String encode(List<String> strs) {
        /*Append sb for encoding and then decode
        T(n) = O(m) for each fn
        S(n) = O(m+n): both fns called - m: sum of all lens of the Strs, n: no of Strs*/
        //Logic : Enc sb format: len+'#'+str decode accordingly
        StringBuilder sb = new StringBuilder();
        for(String str : strs){
            sb.append(str.length()).append('#').append(str);
        }
        return sb.toString();
    }

    public List<String> decode(String str) {
        int i = 0;
        List<String> res = new ArrayList<>();
        while(i < str.length()){
            int j = i;
            while(str.charAt(j) != '#'){
                j++;
            }
            int len = Integer.parseInt(str.substring(i,j));
            i = j + 1;
            j = i + len;
            res.add(str.substring(i,j));
            i = j;
        }
        return res;
    }
}
